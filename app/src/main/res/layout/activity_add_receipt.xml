<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="opcon.com.printer.AddReceiptActivity">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/select_name">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/customer"
                        android:textSize="16sp"
                        android:textColor="@color/textColor"
                        android:text="@string/customer"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"
                        android:id="@+id/view2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text|textCapCharacters"
                        android:background="@color/transparent"
                        android:id="@+id/device"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:hint="@string/device_name"
                        android:textColorHint="@color/hintColor"
                        android:layout_centerVertical="true"
                        android:layout_alignRight="@+id/view2"
                        android:layout_alignEnd="@+id/view2"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/select_device"
                        app:ico_color="@color/textColor"
                        app:ico_icon="@string/gmd_arrow_drop_down_circle"
                        app:ico_size="24dp"
                        tools:ignore="MissingPrefix"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_toLeftOf="@id/select_device"
                        android:layout_toStartOf="@id/select_device"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"
                        android:id="@+id/view"/>



                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/select_date">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/dates"
                        android:textColor="@color/textColor"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:inputType="numberDecimal"
                            android:background="@color/transparent"
                            android:id="@+id/amounts"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@color/textColor"
                            android:hint="@string/amount_hint"
                            android:textColorHint="@color/hintColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/textColor"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:text="@string/tl"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/extract_amount"
                        app:ico_color="@color/textColor"
                        app:ico_icon="@string/gmd_expand_more"
                        app:ico_size="24dp"
                        tools:ignore="MissingPrefix"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_toLeftOf="@id/plus_amount"
                        android:layout_toStartOf="@id/plus_amount"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/plus_amount"
                        app:ico_color="@color/textColor"
                        app:ico_icon="@string/gmd_expand_less"
                        app:ico_size="24dp"
                        tools:ignore="MissingPrefix"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textCapCharacters"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:maxWidth="80dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:hint="@string/task"
                        android:textColorHint="@color/hintColor"
                        android:background="@color/transparent"
                        android:id="@+id/tasks"
                        android:textColor="@color/textColor"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textCapCharacters"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:maxWidth="80dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:hint="@string/address"
                        android:textColorHint="@color/hintColor"
                        android:background="@color/transparent"
                        android:id="@+id/addresses"
                        android:textColor="@color/textColor"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textCapCharacters"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:maxWidth="80dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColorHint="@color/hintColor"
                        android:hint="@string/note"
                        android:background="@color/transparent"
                        android:id="@+id/notes"
                        android:textColor="@color/textColor"
                        android:text=""
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="0.2dp"
                        android:background="@color/indicatorGrey"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text|textCapCharacters"
                        android:background="@color/transparent"
                        android:id="@+id/staffs"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:hint="@string/staff"
                        android:textColorHint="@color/hintColor"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/select_staff"
                        app:ico_color="@color/textColor"
                        app:ico_icon="@string/gmd_person"
                        app:ico_size="24dp"
                        tools:ignore="MissingPrefix"/>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_toLeftOf="@id/select_staff"
                        android:layout_toStartOf="@id/select_staff"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/indicatorGrey"
                        android:id="@+id/view3"/>



                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/modify_more">

            <View
                android:layout_width="0.2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"
                android:background="@color/indicatorGrey"/>

            <View
                android:layout_width="0.2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/indicatorGrey"/>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="0.2dp"
                android:background="@color/indicatorGrey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:text="@string/modify_text"
                android:layout_centerInParent="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="0.2dp"
                android:background="@color/indicatorGrey"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/print">

            <View
                android:layout_width="0.2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <View
                android:layout_width="0.2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="0.2dp"
                android:background="@color/white"/>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                app:ico_color="@color/white"
                app:ico_icon="@string/gmd_print"
                app:ico_size="24dp"
                tools:ignore="MissingPrefix"/>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="0.2dp"
                android:background="@color/white"/>
        </RelativeLayout>




    </LinearLayout>


</ScrollView>
